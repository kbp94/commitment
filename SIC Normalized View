let
  Source = SIC,
  Keep = Table.SelectColumns(Source,{
    "Id","DOC","DateOfFollowUp","AREA","DISTRICT","UNIT","WHO","COMMENTS",
    "SICIndicator","SICIndicator2","ServiceIndicato","COMMITMENTDATE",
    "EscalationTier","LastEscalated","Status","ActionTaken","MPOO",
    "Created","Modified"
  }, MissingField.Ignore),
  Ren = Table.RenameColumns(Keep,{
    {"DOC","DateOfCall"},{"COMMITMENTDATE","CommitmentDate"},
    {"AREA","Area"},{"DISTRICT","District"},{"UNIT","Unit"},
    {"WHO","WhoSpoke"},{"COMMENTS","Commitments"},
    {"ServiceIndicato","ServiceIndicator"},{"EscalationTier","Tier"},
    {"Status","Status_Switch"},{"MPOO","MPOOView"}
  }, MissingField.Ignore),
  AddInd = Table.AddColumn(Ren,"IndicatorUnified", each if Text.FromNullable([SICIndicator])<>"" then [SICIndicator] else if Text.FromNullable([SICIndicator2])<>"" then [SICIndicator2] else null),
  Select = Table.SelectColumns(AddInd,{
    "Id","DateOfCall","CommitmentDate","DateOfFollowUp",
    "Area","District","Unit","WhoSpoke","Commitments",
    "IndicatorUnified","ServiceIndicator",
    "Tier","LastEscalated","Status_Switch","ActionTaken","MPOOView",
    "Created","Modified"
  }, MissingField.Ignore),
  Types = Table.TransformColumnTypes(Select,{
    {"Id",Int64.Type},{"DateOfCall",type datetime},{"CommitmentDate",type datetime},{"DateOfFollowUp",type datetime},
    {"Area",type text},{"District",type text},{"Unit",type text},{"WhoSpoke",type text},{"Commitments",type text},
    {"IndicatorUnified",type text},{"ServiceIndicator",type text},{"Tier",type text},{"LastEscalated",type text},
    {"Status_Switch",type text},{"ActionTaken",type text},{"MPOOView",type text},{"Created",type datetime},{"Modified",type datetime}
  }),
  WithType = Table.AddColumn(Types,"ListType", each "SIC", type text)
in
  WithType
