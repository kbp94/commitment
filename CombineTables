let
    SICCall = YourSICCallTable, // Replace with SIC Call table
    APRCall = YourAPRCallTable, // Replace with APR Call table
    SICCallRenamed = Table.RenameColumns(SICCall, {
        {"AREA", "Area"},
        {"DISTRICT", "District"},
        {"COMMITMENTDATE", "DueDate"},
        {"ServiceIndicato", "ServiceIndicator"},
        {"COMMENTS", "Comments"},
        {"NSI", "NationalSummaryIndicatorImpact"},
        {"WHO", "PersonSpeakingforSite"},
        {"WhosCommitted", "ResponsibleParty"},
        {"SICIndicator2", "SICIndicatorSecondary"},
        {"DOC", "DateOfCall"},
        {"UNIT", "Office"},
        {"Status", "Status"},
        {"LastEscalated", "LastEscalated"},
        {"CALLTYPE", "CallType"},
        {"OData__UIVersionString", "UIVersionString"}
    }, MissingField.Ignore),
    APRCallRenamed = Table.RenameColumns(APRCall, {
        {"DateofFollowUp", "DateOfFollowUp"},
        {"EscalatedWas", "WasEscalated"},
        {"StatusNew", "Status"},
        {"NEW_LastEscalated", "LastEscalated"},
        {"OData__UIVersionString", "UIVersionString"}
    }, MissingField.Ignore),
    SICCallWithSource = Table.AddColumn(SICCallRenamed, "Source", each "SIC", type text),
    APRCallWithSource = Table.AddColumn(APRCallRenamed, "Source", each "APR", type text),
    CombinedTable = Table.Combine({SICCallWithSource, APRCallWithSource})
in
    CombinedTable
