let
    // Load SIC Call and APR Call tables
    SICCall = YourSICCallTable, // Replace with actual SIC Call table reference
    APRCall = YourAPRCallTable, // Replace with actual APR Call table reference

    // Rename columns for consistency
    SICCallRenamed = Table.RenameColumns(SICCall, {
        {"AREA", "Area"},
        {"DISTRICT", "District"},
        {"COMMITMENTDATE", "DueDate"},
        {"ServiceIndicato", "ServiceIndicator"},
        {"COMMENTS", "Comments"},
        {"NSI", "NationalSummaryIndicatorImpact"},
        {"WHO", "PersonSpeakingforSite"},
        {"WhosCommitted", "ResponsibleParty"},
        {"SICIndicator2", "SICIndicator"}
    }, MissingField.Ignore),

    APRCallRenamed = Table.RenameColumns(APRCall, {
        {"PersonSpeakingforSite", "PersonSpeakingforSite"},
        {"NationalSummaryIndicatorImpact", "NationalSummaryIndicatorImpact"},
        {"Commitments", "Commitments"},
        {"Comments", "Comments"},
        {"DueDate", "DueDate"}
    }, MissingField.Ignore),

    // Add source column to differentiate
    SICCallWithSource = Table.AddColumn(SICCallRenamed, "Source", each "SIC", type text),
    APRCallWithSource = Table.AddColumn(APRCallRenamed, "Source", each "APR", type text),
 
    // Append tables
    CombinedTable = Table.Combine({SICCallWithSource, APRCallWithSource}),

    // Expand Versions column
    ExpandedVersions = Table.ExpandTableColumn(CombinedTable, "Versions", 
        {"Modified", "AuthorId", "EditorId", "OData__UIVersionString"}, 
        {"Version.Modified", "Version.AuthorId", "Version.EditorId", "Version.UIVersionString"})
in
    ExpandedVersions
